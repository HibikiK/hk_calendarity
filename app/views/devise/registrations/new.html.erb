<h2 class='mt-3'><%= t('.sign_up') %></h2>

<div class='container'>
  <div class='row'>
    <div class='d-flex justify-content-center'>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <%= f.label t("devise.registrations.new.username") %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class:'form-control' %>
        </div>
        <%# ':email'から':username'に変更 %>

        <div class="form-group mb-3">
          <%= f.label t("devise.registrations.new.fullname") %><br />
          <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", class:'form-control' %>
        </div>
        <%# ':fullname' 欄を追加 %>

        <div class="form-group mb-3">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
        </div>

        <div class="actions my-3 d-flex justify-content-center">
          <%= f.submit t('.sign_up'), class:'btn btn-lg btn-info'%>
        </div>
      <% end %>
    

    </div>
  </div>
  <div class="my-3 d-flex justify-content-center">
    <%= render "devise/shared/links" %>
    <p>(アカウントをお持ちの方)</p>
  </div>
</div>