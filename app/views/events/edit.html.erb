<% now = Time.zone.now %>

<h1 class='mt-2'>イベント情報編集</h1>

<%= form_with(model: @event, class: 'b-1 p-3 border') do |f|  %>
  <div id="errors"></div>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :event_type, class: 'form-label' %><br>
    <%= f.select :event_type, options_for_select(Event.event_types.map { |k, _v| [I18n.t("enums.event.event_type.#{k}"), k] }), {selected: I18n.t("enums.event.event_type.#{@event.event_type}")},  { class: 'form-control mb-3', data: {} } %>
  </div>

  <div class="mb-3">
    <%= f.label :start_at, class: 'form-label' %><br>
    <%= f.datetime_select :start_at, start_year: now.year, end_year: now.year + 1 %>
  </div>

  <div class="mb-3">
    <%= f.label :end_at, class: 'form-label' %><br>
    <%= f.datetime_select :end_at, start_year: now.year, end_year: now.year + 1 %>
  </div>

  <div class="mb-3">
    <%= f.label :place, class: 'form-label' %>
    <%= f.text_field :place, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :audience, class: 'form-label' %>
    <%= f.text_field :audience, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :definition, class: 'form-label' %>
    <%= f.text_area :definition, class: 'form-control', row:10 %>
  </div>

  <div class="mb-3">
    <%= f.label :comment, class: 'form-label' %>
    <%= f.text_area :comment, class: 'form-control', row:10 %>
  </div>

  <div class="mb-3">
    <%= f.label :image, class: 'form-label' %>
    
    <% if @event.image.attached? && @event.image.blob&.persisted? %>
      <%= image_tag(@event.image.variant(resize_to_fit: [200, 200]), class:'img-thumbnail d-block mb-3') %>
    <% end %>
    <%= f.file_field :image, class: 'form-control-file'%>
  </div>

    <% if @event.image.attached? && @event.image.blob&.persisted? %>
      <div class='form-check'>
        <label><%= f.check_box :remove_image %>画像を削除する</label>
      </div>
    <% end %>

  <div class='justify-content-end'>
    <%= f.submit '登録', class: 'btn btn-primary' %>
  </div>
<% end %>